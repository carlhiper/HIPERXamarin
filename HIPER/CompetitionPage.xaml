<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HIPER.CompetitionPage"
             xmlns:converters="clr-namespace:HIPER.ViewModel.Converters">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:PerformanceToImageConverter x:Key="converter"/>
            <converters:AcceptedChallengeToColorConverter x:Key="frameColorConverter"/>
            <converters:ChallengeIdToBoolConverter x:Key="challengeVisibleConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>


    <StackLayout Margin="10">

        <Label Text="COMPETITIONS" Style="{StaticResource Header}"></Label>
                    
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="120" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Active" VerticalOptions="End" HorizontalOptions="End"></Label>
            <Switch Grid.Column="1" x:Name="showClosedSwitch" OnColor="LightGray" ThumbColor="{StaticResource hiperPeach}" PropertyChanged="showClosedSwitch_PropertyChanged" VerticalOptions="End"></Switch> 
            <Label Grid.Column="2" Text="Closed" VerticalOptions="End" HorizontalOptions="Start"></Label>
            <Picker Grid.Column="3" x:Name="filter" VerticalOptions="End" HorizontalOptions="FillAndExpand" Title="Filter" SelectedIndexChanged="filter_SelectedIndexChanged" FontSize="Small"></Picker>
        </Grid>

        
        <ContentView>
            <Frame BorderColor="LightGray"
                   >
                 <Grid Padding="10">
                   <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                     <Button Text="Click here to add a goal!"
                             Style="{StaticResource Minimal}"
                             FontAttributes="Bold"
                             TextColor="Gray"
                             FontSize="Micro"
                             x:Name="AddNewCompetitionButton"
                             Clicked="AddNewCompetitionButton_Clicked"/>


                        <!--<Label Grid.Row="0"
                        Grid.Column="0" 
                        Text="Click here to add new goal!"
                        TextColor="Gray"
                        FontAttributes="Bold" />-->
                    <ProgressBar
                        VerticalOptions="Center"
                        Grid.Column="2"
                        Grid.Row="0"
                        Progress="0.5"
                        ProgressColor="Gray"/>
                    <Label Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Grid.Column="0" 
                        Text=""
                        FontAttributes="None" 
                        VerticalOptions="End" />
                </Grid>
         
            </Frame>
        </ContentView>

        <CollectionView
               
            x:Name="competitionCollectionView"
            SelectionMode="Single"
            SelectionChanged="competitionCollectionView_SelectionChanged">
                
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ContentView>
                        <Frame BorderColor="{Binding GoalAccepted, Converter={StaticResource frameColorConverter}}">
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="23" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="35"/>
                                </Grid.ColumnDefinitions>

                                <Image
                                    Source="{StaticResource challenge}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="Start"
                                    HeightRequest="25"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    IsVisible="{Binding ChallengeId, Converter={StaticResource challengeVisibleConverter}}">
                                </Image>
                                <Label Grid.Row="0"
                                    Grid.Column="1" 
                                    Text="{Binding Title}" 
                                    FontAttributes="Bold" />
                                <ProgressBar
                                    VerticalOptions="Center"
                                    Grid.Column="2"
                                    Grid.Row="0"
                                    Progress="{Binding Progress}"
                                    ProgressColor="{StaticResource hiperPeach}" ></ProgressBar>
                                <Image
                                    Source="{Binding PerformanceIndicator, Converter={StaticResource converter}}"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    VerticalOptions="Start"
                                    HorizontalOptions="End"></Image>
                                <Label Grid.Row="1"
                                    Grid.ColumnSpan="3"
                                    Grid.Column="0" 
                                    Text="{Binding Description}"
                                    FontAttributes="None" 
                                    VerticalOptions="End" />
                                 <Image
                                    Source="{StaticResource recurrent}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="End"
                                    HeightRequest="25"
                                    Grid.Column="3"
                                    Grid.Row="1"
                                    IsVisible="{Binding RepeatType}"/>
                                <Label Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Text="{Binding Deadline, StringFormat='Deadline: {0:yyyy-MM-dd}'}"
                                    FontAttributes="Italic" 
                                    VerticalOptions="End" />
                                 <Image
                                    Source="{StaticResource ok}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="End"
                                    HeightRequest="20"
                                    Grid.Column="3"
                                    Grid.Row="2"
                                    IsVisible="{Binding Completed}">
                                </Image>
                            </Grid>
                        </Frame>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView> 
    </StackLayout>
</ContentPage>
