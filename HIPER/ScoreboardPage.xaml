            <StackLayout
                x:Name="aiLayout"
                IsVisible="False"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="Gray" Opacity="0.5">

                <ActivityIndicator
                    x:Name="ai"
                    IsRunning="False"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Color="Black"/>
            </StackLayout>

            <CollectionView
               
                x:Name="goalCollectionView"
                SelectionMode="Single"
                SelectionChanged="goalCollectionView_SelectionChanged"
                VerticalOptions="FillAndExpand">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Frame BorderColor="{Binding GoalAccepted, Converter={StaticResource frameColorConverter}}">
                                    <Grid Padding="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <Image
                                    Source="{StaticResource challenge}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="Start"
                                    HeightRequest="30"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    IsVisible="{Binding ChallengeId, Converter={StaticResource challengeVisibleConverter}}">
                                        </Image>
                                        <Label Grid.Row="0"
                                    Grid.Column="1" 
                                    Text="{Binding Title}" 
                                    FontAttributes="Bold" />
                                        <ProgressBar
                                    VerticalOptions="Center"
                                    Grid.Column="2"
                                    Grid.Row="0"
                                    Progress="{Binding Progress}"
                                    ProgressColor="{StaticResource hiperPeach}"
                                    ></ProgressBar>
                                        <Image
                                    Source="{Binding PerformanceIndicator, Converter={StaticResource converter}}"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    VerticalOptions="Start"
                                    HorizontalOptions="End"
                                    HeightRequest="30"
                                    WidthRequest="30"></Image>
                                        <Label Grid.Row="1"
                                    Grid.ColumnSpan="3"
                                    Grid.Column="0" 
                                    Text="{Binding Description}"
                                    FontAttributes="None" 
                                    VerticalOptions="End" />
                                        <Image
                                    Source="{StaticResource recurrent}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="End"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Grid.Column="3"
                                    Grid.Row="1"
                                    IsVisible="{Binding RepeatType}"/>
                                        <Label Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Text="{Binding Deadline, StringFormat='Deadline: {0:yyyy-MM-dd}'}"
                                    FontAttributes="Italic" 
                                    VerticalOptions="End" />
                                        <Image
                                    Source="{StaticResource ok}"
                                    Aspect="AspectFit"
                                    HorizontalOptions="End"
                                    HeightRequest="30"
                                     WidthRequest="30"
                                    Grid.Column="3"
                                    Grid.Row="2"
                                    IsVisible="{Binding Completed}">
                                        </Image>
                                    </Grid>
                                </Frame>
                            </ContentView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
